{% block content %}

	<!-- Jobs Cover Image -->
	<div class="page-banner page-banner-lg">
		<span data-picture data-alt="">
		    <span data-src="/wp-content/themes/blades/images/careers/single_header1_sm.jpg"></span>
		    <span data-src="/wp-content/themes/blades/images/careers/single_header1_med.jpg"     data-media="(min-width: 600px)"></span>
		    <span data-src="/wp-content/themes/blades/images/careers/single_header1_lg.jpg"      data-media="(min-width: 1100px)"></span>

		    <!-- Fallback content for non-JS browsers. Same img src as the initial, unqualified source element. -->
		    <noscript>
		        <img class="page-banner-img" src="/wp-content/themes/blades/images/careers/single_header1_sm.jpg" alt="">
		    </noscript>
		</span> <!-- /data-picture -->
	</div><!-- page-banner -->


	<!-- Posting description -->
	{% block career_description %}
		<div class="career-mod career-desc">
			<div class="site-width">
				<div class="pull-up pull-up-border">
					<div class="pull-up-inner">
						<div class="career-desc-head">
							<h4 class="h4 h-centered career-sub-h"><a href="/careers" class="career-sub-h-link">Careers at Upstatement</a></h4>
							<h2 class="h2 h-centered">{{post.title}}</h2>
						</div> <!-- /career-desc-head -->

						<div class="txt-width">
							<div class="txt-lg">
								<p><span class="dropcap">T</span>Words be going here. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci explicabo perspiciatis error inventore quae voluptatum, veniam, possimus doloribus, obcaecati rem provident fugiat nostrum, sapiente rerum commodi repudiandae recusandae omnis cum quod quas delectus. Corporis necessitatibus hic soluta culpa sapiente similique delectus consequuntur obcaecati pariatur alias? Quasi quisquam, explicabo quae id!</p>
								<p>Words be going here. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci explicabo perspiciatis error inventore quae voluptatum, veniam, possimus doloribus, obcaecati rem provident fugiat nostrum, sapiente rerum commodi repudiandae recusandae omnis cum quod quas delectus. Corporis necessitatibus hic soluta culpa sapiente similique delectus consequuntur obcaecati pariatur alias? Quasi quisquam, explicabo quae id!</p>
							</div> <!-- /txt-lg -->
						</div> <!-- txt-width -->
					</div> <!-- /pull-up-inner -->
				</div> <!-- /pull-up -->
			</div> <!-- /site-width -->
		</div> <!-- /career-desc -->
	{% endblock %} {# career_description #}

	<!-- Quote -->
	{% block career_quote %}
		<div class="career-quote">
			<div class="site-width">
				<h3 class="h1">You're doing stuff and saying words right here with words to say right here</h3>
			</div> <!-- site-width -->
		</div> <!-- /career-block -->
	{% endblock %} {# career_quote #}


	<!-- Alumni block -->
	{% block career_alumni %}
		<div class="career-mod career-alumni">
			<div class="site-width">
				<div class="career-desc-head">
					<h4 class="h4 h-centered career-sub-h">Where are they now</h4>
					<h2 class="h2 h-centered">Apprenticeship Alumni</h2>
				</div> <!-- /career-desc-head -->
				<div class="l-grid-3">
					{% for i in 1..3 %}
						<article class="media-block grid-item">
							<div class="alumni-img-block">
								<img src="http://placekitten.com/250/250" alt="">
							</div> <!-- /grid-img-block -->
							<div class="grid-content-block">
								<h4 class="grid-h">Gus Wezerk</h4>
								<p class="grid-txt">Young Gus left a full-time job in San Francicso, rode his bike across the country just to get here for his Design Apprenticeship. We liked him so much, he stayed longer and did a Development Apprenticeship. Gus left us to join Fast Company as a data something or other.</p>
							</div> <!-- grid-content-block -->
						</article> <!-- /media-block -->
					{% endfor %}
				</div> <!-- /l-grid-3 -->
			</div> <!-- /site-width -->
		</div> <!-- /career-alumni -->
	{% endblock %} {# career_alumni #}



	<!-- Apply form -->
	{% block career_form %}
		<div class="career-mod career-apply">
			<div class="site-width">
				<div class="pull-up">
					<div class="pull-up-inner">
							<div class="career-desc-head">
								<h2 class="h2 h-centered">Are you ready to Apply?</h2>
							</div> <!-- /career-desc-head -->

							<div class="career-form">
								{{post.content}}
							</div> <!-- career-form -->

					</div> <!-- /pull-up-inner -->
				</div> <!-- /pull-up -->
			</div> <!-- /site-width -->
		</div>  <!-- career-apply -->
	{% endblock %} {# career_form #}



	<!-- Career photos bottom -->
	{% block career_photos_bottom %}
		<!-- Career photos bottom -->
		<div class="career-mod career-photos">
			<!-- <img src="/wp-content/themes/blades/images/careers/careers_test_2.jpg" /> -->
			<span data-picture data-alt="">
		        <span data-src="/wp-content/themes/blades/images/careers/single_block_sm.jpg"></span>
		        <span data-src="/wp-content/themes/blades/images/careers/single_block_med.jpg"     data-media="(min-width: 600px)"></span>
		        <span data-src="/wp-content/themes/blades/images/careers/single_block_lg.jpg"      data-media="(min-width: 1100px)"></span>

		        <!-- Fallback content for non-JS browsers. Same img src as the initial, unqualified source element. -->
		        <noscript>
		            <img src="/wp-content/themes/blades/images/careers/single_block_sm.jpg" alt="">
		        </noscript>
		    </span>
		</div> <!-- /career-content -->
	{% endblock %} {# career_photos_bottom #}


{% endblock %} {# /content #}



